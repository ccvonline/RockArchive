<Window x:Class="Rock.Wpf.ErrorMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Oops..."
        Height="272"
        Width="448"
        ResizeMode="NoResize"
        FontFamily="./resources/#Open Sans Regular"
        FontSize="14"
        Background="#efefef"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary Source="StyleResources.xaml" />
    </Window.Resources>
    <StackPanel Margin="8">
        <Label Style="{StaticResource labelStyleLegend}">That Wasn't Supposed To Happen...</Label>
        <Label Style="{StaticResource labelStyle}">An error has occurred while processing your request.</Label>
        <Label Style="{StaticResource labelStyleGridTitle}">Exception:</Label>
        <TextBox Name="txtErrorMessage"
                 MinLines="6"
                 Margin="4,0"
                 VerticalScrollBarVisibility="Visible"
                 AcceptsReturn="True"
                 xml:space="preserve"
                 Height="90"
                 IsReadOnly="True"
                 FontSize="12"
                 TextWrapping="Wrap" />
        <Button Name="OK"
                Margin="8"
                Style="{StaticResource buttonStyle}"
                Content="OK"
                Width="72"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="OK_Click" />
    </StackPanel>
</Window>
