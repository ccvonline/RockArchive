{% comment %} 
    {% include '~~/Assets/Lava/dashboard/profile/profile-recent-registrations.lava' %}  
{% endcomment %}

<div class="sidebar-card recent-registrations">
    <div class="title">
        <h3>Recent Registrations</h3>
    </div>
    <div class="header">
    </div>
    <div class="links">
        {% assign registrationCount = Registrations | Size %}
        {% if registrationCount > 0 %}
            {% for registration in Registrations %}
                {% if registration.BalanceDue > 0 %}
                    {% assign balanceDueCssClass = "balance-due" %}
                    {% capture balanceDueMessage %}<br />(Balance Due: {{ registration.BalanceDue | FormatAsCurrency }}){% endcapture %}
                {% endif %}
                <a href="/get-involved/events/Registration?RegistrationId={{ registration.Id }}&RegistrationInstanceId={{ registration.RegistrationInstanceId }}" class="recent-registration {{ balanceDueCssClass }}" >{{ registration.RegistrationInstance.Name }}{{ balanceDueMessage }}</a> 
                
                {% comment %} reset variables for next registration {% endcomment %}
                {% assign balanceDueMessage = "" %}
                {% assign balanceDueCssClass = "" %}
            {% endfor %}
        {% else %}
            No Recent Registrations
        {% endif %}
    </div>
</div>
