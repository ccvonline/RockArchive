{% comment %} worship videos panel {% endcomment %}
<div id="worship-videos-panel" class="worship-videos-panel" style="display: none;"></div>


<script>
    $(document).ready(function(){
        $('.toggle-video').on('click', function () {
            if ( $(this).hasClass('mdi-chevron-down') ) {
                $(this).removeClass('mdi-chevron-down');
                $(this).addClass('mdi-chevron-up');
            }
            else {
                $(this).addClass('mdi-chevron-down');
                $(this).removeClass('mdi-chevron-up');
            }
        });
    });

