{% assign personTemplate = '~~/Assets/Lava/Toolboxes/_ng_person.lava' %}

{% if RosterMembers != empty %}
  <h4>Active Roster</h4>
  {% for p in RosterMembers %}
    {% assign member = p.Child %}
    {% assign loop = forloop.index | Modulo: 2 %}
    {% if loop != 0 %}
    <div class="row">
    {% endif %}
	
	{% include personTemplate %}
	
    {% if loop == 0 or forloop.last %}
    </div>
    {% endif %}
  {% endfor %}
{% endif %}
