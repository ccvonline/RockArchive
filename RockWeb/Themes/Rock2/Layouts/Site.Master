<body>

    <form id="form1" runat="server">
        
        <div id="page-wrapper">

            <nav class="navbar-default navbar-static-side" role="navigation">
                
                <div class="navbar-header">
                    <asp:HyperLink ID="hlHome" runat="server" NavigateUrl="~" ToolTip="Rock">
                        <div class="logo"></div>
                    </asp:HyperLink>
                </div>

                <Rock:Zone Name="Navigation" runat="server" />
            </nav>

            <div id="content-wrapper">

                <header>
                    <!-- Brand Bar -->
                    <nav class="navbar navbar-default navbar-static-top">
            
                    
			                <div class="navbar-header">
                                <div class="navbar-minimize">
                                    <i class="fa fa-bars"></i>
                                </div>
			                </div>
                        
                            <div class="navbar-mobile-logo">
                                <asp:Literal ID="lLogoSvg" runat="server" />		   
                            </div>
                        	
                            <div class="navbar-content">   
                                <div class="navbar-zone-login pull-right"><Rock:Zone Name="Login" runat="server" /></div>
                                <div class="navbar-zone-header pull-right divided"><Rock:Zone Name="Header" runat="server" /></div>
			                </div>
                    </nav>

                </header>

                <main>
                    <asp:ContentPlaceHolder ID="feature" runat="server"></asp:ContentPlaceHolder>

                    <asp:ContentPlaceHolder ID="main" runat="server"></asp:ContentPlaceHolder>
                </main>

                 <footer>
                
		    
                        <hr />

                        <div class="row">
                            <div class="col-md-8">
                                <Rock:Zone Name="Footer" runat="server" />
                            </div>
                            <div class="col-md-4">
                                <p class="text-center" style="color: #808080">
                                    <i class="fa fa-star"></i>Rock Beta <i class="fa fa-star"></i>
                                    <br />
                                    <a href="https://github.com/SparkDevNetwork/Rock/issues?state=open" target="_blank">Submit Issues</a>
                                    / <a href="http://www.rockrms.com/Rock/Ask/Using" target="_blank">Ask Questions</a>
                                    / <a href="http://www.rockrms.com/Rock/Ideas" target="_blank">Ideas</a>
                                </p>
                            </div>
                        </div>

	            </footer>

            </div>

	    </div>
        
        <%-- controls for scriptmanager and update panel --%>
        <ajaxToolkit:ToolkitScriptManager ID="sManager" runat="server"/>
        <asp:UpdateProgress id="updateProgress" runat="server">
		        <ProgressTemplate>
		            <div class="updateprogress-status">
                        <div class="spinner">
                          <div class="rect1"></div>
                          <div class="rect2"></div>
                          <div class="rect3"></div>
                          <div class="rect4"></div>
                          <div class="rect5"></div>
                        </div>
                    </div>
                    <div class="updateprogress-bg modal-backdrop"></div>
		        </ProgressTemplate>
        </asp:UpdateProgress>

    </form>

    <script>
        $(document).ready(function () {

            // minimize sidebar nav button
            $('.navbar-minimize').click(function () {
                $('body').toggleClass('navbar-side-minimized');
                $('.navbar-side > li .nav-childpages').removeAttr('style');
                $('.navbar-side > li').removeClass('open');
            });

            // show child menus
            $('.navbar-side > li > a').click(function () {

                if (!$('body').hasClass('navbar-side-minimized')) {
                    var selectedItem = $(this).closest('li');

                    if ($(selectedItem).hasClass('open')) {
                        $(selectedItem).removeClass('open');
                        $(selectedItem).find('.nav-childpages').slideUp();
                    } else {
                        $(".navbar-side > li.open  .nav-childpages").slideUp();
                        $(".navbar-side > li").removeClass('open');

                        $(selectedItem).addClass('open');
                        $(selectedItem).find('.nav-childpages').slideDown();
                    }
                }
                return false;
            });

        });
    </script>

</body>

</html>